  {
    "type": "effect_on_condition",
    "id": "EOC_MUTAGEN_ADDICTION",
    "condition": {
      "u_has_trait": "MUT_JUNKIE"
    },
    "effect": [
      {
        "if": {
          "math": [
            "rand(600)",
            "<=",
            "addiction_rational(600, 50, u_addiction_intensity('mutagen'))"
          ]
        },
        "then": [
          {
            "if": {
              "math": ["rand(6)", "<", "u_addiction_intensity('mutagen')"]
            },
            "then": { "u_message": "You so miss the exquisite rainbow of post-humanity.", "type": "warning" },
            "else": { "u_message": "Your body is SOO booorrrring.  Just a little sip to liven things up?", "type": "warning" }
          },
          { "u_add_morale": "morale_craving_mutagen", "bonus": -20, "max_bonus": -200 }
        ]
      },
      {
        "if": {
          "and": [
            { "math": ["u_val('focus')", ">", 40] },
            { "math": ["rand(800)", "<=", "addiction_rational(800, 20, u_addiction_intensity('mutagen'))"] }
          ]
        },
        "then": [
          { "math": ["u_val('focus')", "-=", "u_addiction_intensity('mutagen')"] },
          {
            "u_message": "You daydream what it'd be like if you were *different*.  Different is good.",
            "type": "warning"
          }
        ]
      }
    ],
    "false_effect": [
      {
        "if": {
          "math": [
            "rand(500)",
            "<=",
            "addiction_rational(500, 15, u_addiction_intensity('mutagen'))"
          ]
        },
        "then": [
          {
            "if": {
              "math": ["rand(6)", "<", "u_addiction_intensity('mutagen')"]
            },
            "then": { "u_message": "You haven't had any mutagen lately.", "type": "warning" },
            "else": { "u_message": "You could use some new parts…", "type": "warning" }
          },
          { "u_add_morale": "morale_craving_mutagen", "bonus": -5, "max_bonus": -50 }
        ]
      }
    ]
  },
  {
    "type": "effect_on_condition",
    "id": "EOC_ALCOHOL_ADDICTION",
    "//": "This makes it so that cravings happen more often at higher intensities. Random number between 0-20 checked against intensity.",
    "conditions": [
      {
        "math": [
          "rand(21)",
          "<=",
          "u_addiction_intensity('alcohol')"
        ],
        "effect": [
          {
            "condition": { "not": { "u_has_effect": "sleep" } },
            "effect": [
              { "u_message": "addict_alcohol_mild_awake", "snippet": true, "type": "warning" },
			  { "u_message": "message alc mild awake" },
              { "u_add_morale": "morale_craving_alcohol", "bonus": -5, "max_bonus": -30 }
            ],
            "false_effect": [
              { "u_message": "addict_alcohol_mild_asleep", "snippet": true, "type": "warning" },
			  { "u_message": "message alc mild asleep" },
              { "u_add_morale": "morale_craving_alcohol", "bonus": -5, "max_bonus": -30 }
            ]
          }
        ]
      },
      {
        "//": "Same as above for stronger intensities. Checks a random number between 8-300.",
        "math": [
          "8 + rand(293)",
          "<=",
          "u_addiction_intensity('alcohol')"
        ],
        "effect": [
          {
            "u_add_effect": "shakes",
            "duration": "5 minutes"
          },
          {
            "condition": { "not": { "u_has_effect": "sleep" } },
            "effect": [
              { "u_message": "addict_alcohol_strong_awake", "snippet": true, "type": "warning" },
			  { "u_message": "message alc strong awake" },
              { "u_add_morale": "morale_craving_alcohol", "bonus": -5, "max_bonus": -30 }
            ],
            "false_effect": [
              { "u_message": "addict_alcohol_strong_asleep", "snippet": true, "type": "warning" },
			  { "u_message": "message alc strong asleep" },
              { "u_add_morale": "morale_craving_alcohol", "bonus": -5, "max_bonus": -30 }
            ]
          }
        ]
      },
      {
        "//": "Hallucinations are calculated separately. RNG between 10-1600.",
        "condition": {
          "and": [
            { "not": { "u_has_effect": "hallucinations" } },
            { "math": ["10 + rand(1591)", "<=", "u_addiction_intensity('alcohol')"] }
          ]
		"effect" : [
          {
			"u_message": "hallucinations go!"
            "u_add_effect": "hallucinations",
            "duration": "5 hours"
          }, 
		 ]
        }
      }
    ]
  }
]
